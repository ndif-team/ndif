# =============================================================================
# NDIF Configuration
# =============================================================================
# Copy to .env and modify as needed. All variables have sensible defaults.

# -----------------------------------------------------------------------------
# Broker (Redis)
# -----------------------------------------------------------------------------
NDIF_BROKER_URL=redis://localhost:6379
NDIF_BROKER_PORT=6379

# -----------------------------------------------------------------------------
# Object Store (MinIO/S3)
# -----------------------------------------------------------------------------
NDIF_OBJECT_STORE_URL=http://localhost:27018
NDIF_OBJECT_STORE_PORT=27018
NDIF_OBJECT_STORE_CONSOLE_PORT=46805
NDIF_OBJECT_STORE_SERVICE=s3
NDIF_OBJECT_STORE_BUCKET=ndif-results
NDIF_OBJECT_STORE_ACCESS_KEY=minioadmin
NDIF_OBJECT_STORE_SECRET_KEY=minioadmin
NDIF_OBJECT_STORE_REGION=us-east-1
NDIF_OBJECT_STORE_VERIFY=false

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
NDIF_API_URL=http://localhost:8001
NDIF_API_PORT=8001
NDIF_API_WORKERS=1
NDIF_DEV_MODE=true

# -----------------------------------------------------------------------------
# Ray
# -----------------------------------------------------------------------------
NDIF_RAY_ADDRESS=ray://localhost:10001
NDIF_RAY_HEAD_PORT=6385
NDIF_RAY_CLIENT_PORT=10001
NDIF_RAY_DASHBOARD_PORT=8265
NDIF_RAY_SERVE_PORT=8262
NDIF_RAY_OBJECT_MANAGER_PORT=8076
NDIF_RAY_DASHBOARD_GRPC_PORT=8268
NDIF_RAY_TEMP_DIR=/tmp/ray

# -----------------------------------------------------------------------------
# Controller
# -----------------------------------------------------------------------------
NDIF_CONTROLLER_IMPORT_PATH=src.ray.deployments.controller.controller
NDIF_MINIMUM_DEPLOYMENT_TIME_SECONDS=0
